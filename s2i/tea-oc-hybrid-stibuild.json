{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "tea-application",
    "annotations": {
      "description": "Template for the ACE pipeline demo tea app on openshift",
      "tags": "instant-app,app-connect-enterprise,db2,tea"
    }
  },
  "objects": [
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "tea-oc-service"
      },
      "spec": {
        "ports": [
          {
            "name": "web",
            "protocol": "TCP",
            "port": 7800,
            "targetPort": 7800
          }
        ],
        "selector": {
          "app": "tea-application"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "tea-oc-route",
        "annotations": {
          "template.openshift.io/expose-uri": "http://{.spec.host}{.spec.path}"
        }
       },
      "spec": {
        "to": {
          "kind": "Service",
          "name": "tea-oc-service"
        },
        "tls": {
          "termination": "edge"
        }
      },
      "status": {}
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "tea-oc-imagestream"
      },
      "spec": {},
      "status": {
        "dockerImageRepository": ""
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "ace-s2i-imagestream"
      },
      "spec": {
        "dockerImageRepository": "tdolby/experimental"
      },
      "status": {
        "dockerImageRepository": ""
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "tea-oc-build",
        "labels": {
          "name": "tea-oc-build"
        },
        "annotations": {
          "template.alpha.openshift.io/wait-for-ready": "true"
        }
      },
      "spec": {
        "triggers": [
          {
            "type": "ImageChange",
            "imageChange": {}
          },
          {
            "type": "ConfigChange"
          }
        ],
        "source": {
          "type": "Git",
          "git": {
            "uri": "https://github.com/ot4i/ace-demo-pipeline.git"
          }
        },
        "strategy": {
          "type": "Source",
          "sourceStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "name": "ace-s2i-imagestream:ace-s2i-hybrid-image"
            },
            "env": [
              {
                "name": "LICENSE",
                "value": "accept"
              }
            ]
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "tea-oc-imagestream:latest"
          }
        },
        "postCommit": {
          "script": "echo postCommit"
        },
        "resources": {}
      },
      "status": {
        "lastVersion": 0
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "tea-oc-deployment",
        "annotations": {
          "template.alpha.openshift.io/wait-for-ready": "true"
        }
      },
      "spec": {
        "strategy": {
          "type": "Rolling",
          "rollingParams": {
            "updatePeriodSeconds": 1,
            "intervalSeconds": 1,
            "timeoutSeconds": 120,
            "pre": {
              "failurePolicy": "Abort",
              "execNewPod": {
                "command": [
                  "/bin/true"
                ],
                "env": [
                  {
                    "name": "CUSTOM_VAR1",
                    "value": "custom_value1"
                  }
                ],
                "containerName": "tea-oc"
              }
            },
            "post": {
              "failurePolicy": "Ignore",
              "execNewPod": {
                "command": [
                  "/bin/true"
                ],
                "env": [
                  {
                    "name": "CUSTOM_VAR2",
                    "value": "custom_value2"
                  }
                ],
                "containerName": "tea-oc"
              }
            }
          },
          "resources": {}
        },
        "triggers": [
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "tea-oc"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "tea-oc-imagestream:latest"
              }
            }
          },
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "selector": {
          "name": "tea-oc-deployment"
        },
        "template": {
          "metadata": {
            "labels": {
              "name": "tea-oc-deployment"
            }
          },
          "spec": {
            "volumes": [
              {
                "name": "secret-volume",
                "secret": { 
                  "secretName": "jdbc-secret"
                 }
              }
            ],
            "containers": [
              {
                "name": "tea-oc",
                "image": "tea-oc-imagestream",
                "ports": [
                  {
                    "containerPort": 7800,
                    "protocol": "TCP"
                  }
                ],
                "resources": {},
                "volumeMounts": [
                  {
                    "name": "secret-volume",
                    "mountPath": "/var/run/secrets/jdbc"
                  }
                ],
                "terminationMessagePath": "/dev/termination-log",
                "imagePullPolicy": "IfNotPresent",
                "securityContext": {
                  "capabilities": {},
                  "privileged": false
                }
              }
            ],
            "restartPolicy": "Always",
            "dnsPolicy": "ClusterFirst"
          }
        }
      }
    }
  ],
  "labels": {
    "template": "tea-stibuild"
  }
}
